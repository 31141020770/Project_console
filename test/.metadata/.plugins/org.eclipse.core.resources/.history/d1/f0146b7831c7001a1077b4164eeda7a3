package star;
import java.util.*;
public class star {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int number = scanner.nextInt();
		int k = 0, j =1;
		
		for (int i = 0; i < number; i++ ) {
			if(j <number + i)
				System.out.print(" ");

			if(k< i*2 +1)
				System.out.print("*");

			System.out.println("");
		}
	}
}
