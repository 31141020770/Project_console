package star;
import java.util.*;
public class star {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		int number = scanner.nextInt();
		for (int i = 0; i < number; i++ ) {
			System.out.println(" ");
			for (int j = 0; j < number +i ; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
}
